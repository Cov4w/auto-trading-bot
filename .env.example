# Upbit API Credentials
UPBIT_ACCESS_KEY=your_access_key_here
UPBIT_SECRET_KEY=your_secret_key_here

# Trading Configuration
USE_AI_COIN_SELECTION=true  # AI가 승률 높은 코인 자동 선택 (true/false)
TICKER=BTC  # 기본 티커 (AI 선택 비활성화 시 또는 실패 시 사용)
TRADE_AMOUNT=10000  # 1회 매수 금액 (KRW)
TARGET_PROFIT=0.02  # 목표 수익률 (2%)
STOP_LOSS=0.02  # 손절률 (2%)

# Learning Configuration
RETRAIN_THRESHOLD=10  # N건의 매매 후 모델 재학습
MODEL_CONFIDENCE_THRESHOLD=0.7  # 매수 신호 확신도 임계값

# Risk Management
MAX_POSITION_SIZE=0.3  # 최대 포지션 크기 (총 자산의 30%)

# Volume Filter Configuration
ENABLE_VOLUME_FILTER=true  # 거래량 필터 활성화 (false로 설정 시 비활성화)
MIN_VOLUME_24H=100000000  # 최소 24시간 거래량 (기본값: 1억원)
